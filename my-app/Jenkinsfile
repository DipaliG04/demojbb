pipeline {
    agent any

    tools {
        maven 'Default'
        jdk 'Default'
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
    } // Ensure all opened blocks are properly closed
}

        stage('Deploy') {
            steps {
                // Example: Deploy to Tomcat
                sh 'cp target/*.war /opt/tomcat/webapps/'
            }
        }
    }
}
