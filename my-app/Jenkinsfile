pipeline {
    agent any
    tools {
        maven 'Default'  // Use the configured Maven name
        jdk 'Default'    // Use the configured JDK name
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
    }
}
        stage('Test') {
            steps {
                sh 'mvn test'  // Run tests (if any)
            }
        }
        stage('Deploy') {
            steps {
                // Example: Deploy to Tomcat
                sh 'cp target/*.war /opt/tomcat/webapps/'
            }
        }
    }
}
